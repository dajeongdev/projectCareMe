<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pet">
	
	<select id="selectSpeciesLevel1" resultType="com.careme.model.dto.PetSpeciesDto">
		select * from pet_species where pet_species_level = 1
	</select>
	
	<select id="selectSpeciesLevel2" resultType="com.careme.model.dto.PetSpeciesDto">
		select * from pet_species where pet_species_level = 2 and pet_species_ancestor = #{pet_ancestor_idx}			
	</select>
	
</mapper>